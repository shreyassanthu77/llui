---
import RootLayout from "../layouts/RootLayout.astro";
import SendIcon from "../assets/icons/SendIcon.astro";
import Button from "../components/Button.astro";
import Input from "../components/Input.astro";
---

<RootLayout>
  <main class="grid grid-rows-[1fr_auto] p-4 bg-primary-light rounded-3xl">
    <!-- Chat ui -->
    <div></div>
    <!-- Chat input -->
    <form class="grid grid-cols-[1fr_auto] w-full max-w-2xl mx-auto [&>*]:p-4">
      <Input type="text" placeholder="Enter Your Prompt" />
      <Button btn title="Submit">
        <SendIcon />
      </Button>
    </form>
  </main>
</RootLayout>
